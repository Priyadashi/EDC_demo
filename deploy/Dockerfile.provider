# Production Dockerfile for Provider Connector
FROM python:3.11-slim

WORKDIR /app

# Install dependencies
COPY provider-connector/requirements.txt .
RUN pip install --no-cache-dir -r requirements.txt

# Copy shared module
COPY shared /app/shared

# Copy application
COPY provider-connector/*.py /app/

# Copy sample data
COPY sample-data /app/sample-data

# Set environment
ENV PORT=8080
ENV PYTHONUNBUFFERED=1

EXPOSE 8080

CMD ["uvicorn", "main:app", "--host", "0.0.0.0", "--port", "8080"]
